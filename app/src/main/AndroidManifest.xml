<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bjjy.buildtalk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 适配华为（huawei）刘海屏 -->
        <meta-data
            android:name="android.notch_support"
            android:value="true" />
        <!-- 适配小米（xiaomi）刘海屏 -->
        <meta-data
            android:name="notch.config"
            android:value="portrait|landscape" />

        <!-- 友盟配置 -->
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:exported="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent100424468" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <!-- Activity配置 -->
        <activity android:name=".ui.main.MainActivity" />
        <activity android:name=".ui.main.GuideActivity" />
        <activity android:name=".ui.discover.EveryTalkListActivity" />
        <activity android:name=".ui.discover.TopticListActivity" />
        <activity android:name=".ui.discover.CourseListActivity" />
        <activity
            android:name=".ui.discover.EveryTalkDetailActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.talk.TalkSearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".ui.talk.MasterListActivity" />
        <activity android:name=".ui.talk.CircleListActivity" />
        <activity android:name=".ui.talk.MasterDetailActivity" />
        <activity android:name=".ui.talk.MasterCircleActivity" />
        <activity android:name=".ui.talk.FansFocusActivity" />
        <activity android:name=".ui.talk.MasterCollectActivity" />
        <activity android:name=".ui.circle.CircleSearchActivity" />
        <activity android:name=".ui.circle.CircleAgreementActvity" />
        <activity android:name=".ui.circle.CreateCircleActivity" />
        <activity
            android:name=".ui.circle.TopticCircleActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.circle.CourseCircleActivity" />
        <activity
            android:name=".ui.main.LoginActivity"
            android:theme="@style/Anim_fade" />
        <activity
            android:name=".ui.main.PhoneLoginActivity"
            android:theme="@style/Anim_fade" />
        <activity android:name=".ui.mine.WalletActivity" />
        <activity android:name=".ui.mine.SettingActivity" />
        <activity android:name=".ui.mine.PersonInfoActivity" />
        <activity android:name=".ui.mine.FeedBackActivity" />
        <activity android:name=".ui.mine.AboutUsActivity" />
        <activity android:name=".ui.mine.TransactionActivity" />
        <activity android:name=".ui.main.ViewPagerActivity" />
        <activity android:name=".ui.mine.SetPictureActivity" />
        <activity android:name=".ui.circle.CircleInfoActivity" />
        <activity android:name=".ui.circle.CircleMemberActivity" />
        <activity android:name=".ui.circle.MyCardActivity" />
        <activity
            android:name=".ui.circle.PublishActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.circle.CircleDataActivity" />
        <activity android:name=".ui.circle.TopticDetailActivity" />
        <activity android:name=".ui.talk.CircleManDetailActivity"></activity>
    </application>

</manifest>