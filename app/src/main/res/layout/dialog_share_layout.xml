<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:text="分享至"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/sp_11"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">
        <TextView
            android:id="@+id/wechat_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="微信好友"
            android:textColor="@color/text_mid"
            android:textSize="@dimen/sp_11"
            android:drawableTop="@drawable/wechat_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/circle_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="朋友圈"
            android:textColor="@color/text_mid"
            android:textSize="@dimen/sp_11"
            android:drawableTop="@drawable/wechat_circle_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/qq_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:text="QQ"
            android:textColor="@color/text_mid"
            android:textSize="@dimen/sp_11"
            android:drawableTop="@drawable/qq_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"/>
        <TextView
            android:id="@+id/link_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="复制链接"
            android:textColor="@color/text_mid"
            android:textSize="@dimen/sp_11"
            android:drawableTop="@drawable/copy_link_icon"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4"
        android:background="@color/background"/>
    <TextView
        android:id="@+id/cancle_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="取消"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/sp_12"
        android:gravity="center"/>
</LinearLayout>