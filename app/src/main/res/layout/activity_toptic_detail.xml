<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bjjy.buildtalk.ui.discover.EveryTalkDetailActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_layout" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        app:srlEnableLoadMore="false">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_3">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_20">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/item_face_iv"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:src="@drawable/test_course"
                            android:layout_marginTop="@dimen/dp_20"
                            android:layout_marginLeft="@dimen/common_margin"/>
                        <TextView
                            android:id="@+id/item_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textColor="@color/text_drak"
                            android:textSize="@dimen/sp_13"
                            android:text="@string/app_name"
                            android:layout_alignTop="@+id/item_face_iv"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"/>
                        <TextView
                            android:id="@+id/item_job_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="圈主"
                            android:includeFontPadding="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            android:background="@drawable/shape_orange_1radius"
                            android:layout_toRightOf="@+id/item_name_tv"
                            android:layout_alignTop="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_1"
                            android:paddingBottom="@dimen/dp_1"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"/>
                        <ImageView
                            android:id="@+id/item_more_iv"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_20"
                            android:paddingBottom="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_5"
                            android:src="@drawable/item_more_icon"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@id/item_face_iv"/>
                        <TextView
                            android:id="@+id/item_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/sp_9"
                            android:textColor="@color/text_light"
                            android:text="2019-05-23 15:06:50"
                            android:layout_alignBottom="@+id/item_face_iv"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"/>
                        <TextView
                            android:id="@+id/item_content_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:text="今年流行的几种装修材料"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/text_drak"
                            android:layout_below="@+id/item_face_iv"
                            android:layout_marginTop="@dimen/dp_10"/>
                        <ImageView
                            android:id="@+id/item_img_iv"
                            android:layout_width="@dimen/dp_205"
                            android:layout_height="@dimen/dp_205"
                            android:visibility="gone"
                            android:src="@drawable/test_toptic"
                            android:scaleType="centerCrop"
                            android:layout_below="@+id/item_content_tv"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"/>
                        <com.bjjy.buildtalk.weight.NoScrollGridView
                            android:id="@+id/item_grid_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numColumns="3"
                            android:stretchMode="none"
                            android:background="@color/white"
                            android:columnWidth="@dimen/dp_104"
                            android:gravity="center"
                            android:listSelector="@android:color/transparent"
                            android:layout_below="@+id/item_content_tv"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginBottom="@dimen/dp_10"/>
                        <LinearLayout
                            android:id="@+id/praise_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/item_grid_view"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_marginLeft="@dimen/dp_45">
                            <ImageView
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:src="@drawable/praise_gray_icon"
                                android:layout_marginLeft="@dimen/dp_10"/>
                            <TextView
                                android:id="@+id/praise_str_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="傲慢偏见，建筑大师的大师，我是你兄弟，辛德瑞拉，心语心愿"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/text_light"/>
                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部评论"
                        android:textColor="@color/text_drak"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/record_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="0"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/loadmore_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_44"
                    app:srlEnableRefresh="false">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:overScrollMode="never" />
                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_3"
            android:background="@color/background" />

        <EditText
            android:id="@+id/record_et"
            android:layout_width="@dimen/dp_230"
            android:layout_height="@dimen/dp_33"
            android:layout_below="@+id/view1"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/shape_record_5radius"
            android:gravity="center"
            android:hint="0评论"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLength="60"
            android:textColor="@color/text_mid"
            android:textColorHint="@color/text_mid"
            android:textSize="@dimen/sp_11" />

        <LinearLayout
            android:id="@+id/praise_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_toRightOf="@+id/record_et"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20">

            <ImageView
                android:id="@+id/praise_iv"
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:src="@drawable/praise_def" />

            <TextView
                android:id="@+id/praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="0赞"
                android:textSize="@dimen/sp_11" />
        </LinearLayout>

        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_11"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:paddingTop="@dimen/dp_11"
            android:src="@drawable/share_icon" />

    </RelativeLayout>

</RelativeLayout>
