<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/normalView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bjjy.buildtalk.ui.discover.EveryTalkDetailActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_layout" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refresh_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        app:srlEnableLoadMore="false">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_3">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp_20">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/item_face_iv"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginLeft="@dimen/common_margin"
                            android:layout_marginTop="@dimen/dp_20"
                            android:src="@drawable/moren_face" />

                        <TextView
                            android:id="@+id/item_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:includeFontPadding="false"
                            android:text="@string/app_name"
                            android:textColor="@color/text_drak"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/item_job_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_marginTop="@dimen/dp_1"
                            android:layout_toRightOf="@+id/item_name_tv"
                            android:background="@drawable/shape_orange_1radius"
                            android:includeFontPadding="false"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_1"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_1"
                            android:text="圈主"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10" />

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/item_atten_cl"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_24"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingEnd="@dimen/dp_8"
                            android:visibility="visible"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/item_face_iv"
                            android:background="@drawable/shape_orange_13radius"
                            android:layout_marginRight="@dimen/dp_15">
                            <ImageView
                                android:id="@+id/item_atten_iv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/attention_sel"
                                android:layout_marginEnd="@dimen/dp_2"
                                app:layout_constraintHorizontal_chainStyle="spread"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/item_atten_tv"/>
                            <TextView
                                android:id="@+id/item_atten_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/oranger3"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/item_atten_iv"
                                app:layout_constraintEnd_toEndOf="parent"/>
                        </android.support.constraint.ConstraintLayout>

                        <TextView
                            android:id="@+id/item_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:includeFontPadding="false"
                            android:text="2019-05-23 15:06:50"
                            android:textColor="@color/text_light"
                            android:textSize="@dimen/sp_9" />

                        <TextView
                            android:id="@+id/from_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/blue_mid"
                            android:textSize="@dimen/sp_9"
                            android:includeFontPadding="false"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_alignBottom="@+id/item_face_iv"
                            android:layout_toRightOf="@+id/item_time_tv"/>

                        <TextView
                            android:id="@+id/item_content_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:textColor="@color/text_drak"
                            android:textIsSelectable="true"
                            android:textSize="@dimen/sp_15" />

                        <ImageView
                            android:id="@+id/item_img_iv"
                            android:layout_width="@dimen/dp_205"
                            android:layout_height="@dimen/dp_205"
                            android:layout_below="@+id/item_content_tv"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:scaleType="centerCrop"
                            android:src="@drawable/test_toptic"
                            android:visibility="gone" />

                        <RelativeLayout
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/item_content_tv"
                            android:layout_toRightOf="@+id/item_face_iv">

                            <com.bjjy.buildtalk.weight.MultiImageView
                                android:id="@+id/item_grid_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:background="@color/white" />

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/pdf_recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:focusable="false"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginRight="@dimen/dp_15"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:background="@color/white" />

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/item_vertical_cl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_marginTop="@dimen/dp_5">
                                <ImageView
                                    android:id="@+id/item_vertical_video_view"
                                    android:layout_width="@dimen/dp_201"
                                    android:layout_height="@dimen/dp_268"
                                    android:background="@color/black"
                                    android:scaleType="centerCrop"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                                <TextView
                                    android:id="@+id/item_vertical_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0:13"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_11"
                                    android:layout_marginEnd="@dimen/dp_10"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                            </android.support.constraint.ConstraintLayout>

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/item_horizontal_cl"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_marginTop="@dimen/dp_5"
                                android:layout_marginStart="@dimen/dp_10"
                                android:layout_marginBottom="@dimen/dp_5"
                                android:layout_marginEnd="@dimen/common_margin">
                                <ImageView
                                    android:id="@+id/item_horizontal_video_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dp_170"
                                    android:background="@color/black"
                                    android:scaleType="centerCrop"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"/>
                                <TextView
                                    android:id="@+id/item_horizontal_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0:13"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/sp_11"
                                    android:layout_marginEnd="@dimen/dp_10"
                                    android:layout_marginBottom="@dimen/dp_10"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"/>
                            </android.support.constraint.ConstraintLayout>

                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/praise_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view1"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginRight="@dimen/dp_15">

                            <ImageView
                                android:layout_width="@dimen/dp_15"
                                android:layout_height="@dimen/dp_15"
                                android:src="@drawable/praise_gray_icon" />

                            <TextView
                                android:id="@+id/praise_str_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:text="傲慢偏见，建筑大师的大师，我是你兄弟，辛德瑞拉，心语心愿"
                                android:textColor="@color/text_light"
                                android:textSize="@dimen/sp_11" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/from_tv1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_11"
                            android:textColor="@color/blue_mid"
                            android:layout_below="@+id/praise_rl"
                            android:layout_toRightOf="@+id/item_face_iv"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:paddingBottom="@dimen/dp_10"
                            android:layout_marginRight="@dimen/common_margin"/>

                        <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/from_tv1"
                            android:layout_toRightOf="@+id/item_face_iv">
                            <TextView
                                android:id="@+id/share_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="分享到"
                                android:textSize="@dimen/sp_11"
                                android:textColor="@color/text_color6"
                                android:layout_marginStart="@dimen/dp_10"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                            <ImageView
                                android:id="@+id/wechat_iv"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:padding="@dimen/dp_10"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:src="@drawable/umeng_socialize_wechat"
                                app:layout_constraintStart_toEndOf="@+id/share_tv"
                                app:layout_constraintTop_toTopOf="parent"/>
                            <ImageView
                                android:id="@+id/wechat_circle_iv"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:padding="@dimen/dp_10"
                                android:src="@drawable/umeng_socialize_wxcircle"
                                app:layout_constraintStart_toEndOf="@+id/wechat_iv"
                                app:layout_constraintTop_toTopOf="parent"/>
                        </android.support.constraint.ConstraintLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/common_margin">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部评论"
                        android:textColor="@color/text_drak"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/record_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="0"
                        android:textColor="@color/text_light"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>
            </android.support.design.widget.AppBarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:id="@+id/loadmore_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_44"
                    app:srlEnableRefresh="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never" />

                        <android.support.v4.widget.NestedScrollView
                            android:id="@+id/emptyView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never"
                            android:visibility="gone">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/empty_img"
                                    android:layout_width="@dimen/dp_217"
                                    android:layout_height="@dimen/dp_168"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/dp_20"
                                    android:src="@drawable/empty_comment_icon" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/empty_img"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="@dimen/common_margin"
                                    android:text="成为评论第一人"
                                    android:textColor="@color/text_light"
                                    android:textSize="@dimen/sp_15" />
                            </RelativeLayout>
                        </android.support.v4.widget.NestedScrollView>

                    </RelativeLayout>


                </com.scwang.smartrefresh.layout.SmartRefreshLayout>

            </RelativeLayout>

        </android.support.design.widget.CoordinatorLayout>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="#F5F6F8">

        <EditText
            android:id="@+id/record_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_3"
            android:background="@drawable/shape_record_5radius"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:maxLength="60"
            android:paddingLeft="@dimen/common_margin"
            android:hint="说点什么..."
            android:textColor="@color/text_mid"
            android:textColorHint="@color/text_mid"
            android:textSize="@dimen/sp_13" />
        <LinearLayout
            android:id="@+id/record_bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5F6F8"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/praise_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/praise_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/praise_def" />

                <TextView
                    android:id="@+id/praise_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="@color/text_mid"
                    android:text="0"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_24"
                android:background="@color/border5"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:id="@+id/record_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/record_icon"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="评论"
                    android:textColor="@color/text_mid"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_24"
                android:background="@color/border5"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/share_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawablePadding="@dimen/dp_5"
                    android:textColor="@color/text_mid"
                    android:textSize="@dimen/sp_13"
                    android:text="分享"
                    android:drawableLeft="@drawable/share_icon" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
