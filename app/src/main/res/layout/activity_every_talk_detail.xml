<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bjjy.buildtalk.contains.discover.EveryTalkDetailActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_layout" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        android:layout_marginTop="@dimen/dp_3">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <include
                    layout="@layout/every_talk_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精选留言"
                    android:textColor="@color/text_drak"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/record_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="0"
                    android:textColor="@color/text_light"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:layout_marginBottom="@dimen/dp_44"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:layout_gravity="bottom"
            android:background="@color/white">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3"
                android:background="@color/background" />

            <EditText
                android:id="@+id/record_et"
                android:layout_width="@dimen/dp_230"
                android:layout_height="@dimen/dp_33"
                android:layout_below="@+id/view1"
                android:layout_centerVertical="true"
                android:inputType="text"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_3"
                android:imeOptions="actionSend"
                android:background="@drawable/shape_record_5radius"
                android:hint="0评论"
                android:maxLength="60"
                android:gravity="center"
                android:textColor="@color/text_mid"
                android:textColorHint="@color/text_mid"
                android:textSize="@dimen/sp_11" />

            <LinearLayout
                android:id="@+id/praise_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_toRightOf="@+id/record_et"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_20">

                <ImageView
                    android:id="@+id/praise_iv"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:src="@drawable/praise_def" />

                <TextView
                    android:id="@+id/praise_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="0赞"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

            <ImageView
                android:id="@+id/share_iv"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_11"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_11"
                android:src="@drawable/share_icon" />

        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
