<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_345">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_60"
            android:background="@color/white"
            android:paddingLeft="@dimen/common_margin"
            android:paddingRight="@dimen/common_margin">
            <LinearLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_53"
                android:gravity="center_vertical">
                <CheckBox
                    android:id="@+id/checkbox"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/selector_circle_dialog"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_drak"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《圈主规则》"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/blue_drak"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/view2"
                android:layout_marginTop="@dimen/dp_15">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:background="@drawable/circle_dialog_borad_icon"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_98"
                    android:padding="@dimen/dp_15"
                    android:background="@color/background"
                    android:text="@string/circle_dialog_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_light"/>
            </LinearLayout>
            <TextView
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下一步"
                android:textSize="@dimen/sp_17"
                android:background="@drawable/shape_blue_5button"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:textColor="@color/white"
                android:layout_below="@+id/view3"
                android:gravity="center"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/view1"
            android:layout_width="@dimen/dp_113"
            android:layout_height="@dimen/dp_113"
            android:src="@drawable/circle_dialog_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"/>
    </RelativeLayout>
</RelativeLayout>