<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/noNetView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ImageView
        android:id="@+id/error_view_img"
        android:layout_width="@dimen/dp_325"
        android:layout_below="@+id/include_toolbar"
        android:layout_height="@dimen/dp_247"
        android:src="@drawable/empty_404_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_75"/>
    <TextView
        android:id="@+id/error_view_no_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_view_img"
        android:text="无网络哦～"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_30"
        android:textColor="@color/text_mid"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    <TextView
        android:id="@+id/error_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请检查您的网络后重新加载..."
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_light"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/error_view_no_net"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/tv_reload"
        android:layout_width="@dimen/dp_245"
        android:layout_height="@dimen/dp_44"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_blue_light_25button"
        android:text="重新加载"
        android:gravity="center"
        android:textColor="@color/blue_mid"
        android:textSize="@dimen/sp_15"
        android:layout_below="@+id/error_view_tv"/>
</RelativeLayout>