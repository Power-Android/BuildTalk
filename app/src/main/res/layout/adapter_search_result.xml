<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_15">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_face_iv"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:src="@drawable/test_course"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/dp_5"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:id="@+id/item_job_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="博士"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/sp_11"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="悉尼大学工商管理硕士，美国南加州大学工商管理博士..."
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_drak"
        android:layout_below="@+id/item_job_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:maxLines="2"
        android:ellipsize="end"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:max_select="0"
        android:layout_below="@+id/item_content_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_5"/>
</RelativeLayout>