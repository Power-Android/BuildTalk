<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_margin">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_face_iv"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@drawable/moren_face"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/app_name"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_drak"/>
    <TextView
        android:id="@+id/item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:text="2019-05-07 17:47:36"
        android:textColor="@color/text_light"
        android:textSize="@dimen/sp_9"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"/>
    <ImageView
        android:id="@+id/item_praise_iv"
        android:layout_width="@dimen/dp_12"
        android:layout_height="@dimen/dp_12"
        android:src="@drawable/praise_def"
        android:layout_toLeftOf="@+id/item_praise_tv"
        android:layout_marginRight="@dimen/dp_6"/>
    <TextView
        android:id="@+id/item_praise_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:text="0"
        android:textColor="@color/text_light"
        android:textSize="@dimen/sp_9"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="一点新素材希望能帮到大家"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_mid"
        android:layout_below="@+id/item_time_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/border3"
        android:layout_below="@+id/item_content_tv"
        android:layout_marginTop="@dimen/dp_15"/>
</RelativeLayout>