<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_blue_2radius"
    android:layout_marginBottom="@dimen/dp_25">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_margin"
        android:scaleType="centerCrop"
        android:src="@drawable/test_course" />

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/item_img_iv"
        android:singleLine="true"
        android:text="建筑产业工业互联网"
        android:textColor="#1F63AF"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_mid"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_below="@+id/item_title_tv"
        android:layout_toRightOf="@+id/item_img_iv"/>

    <TextView
        android:id="@+id/item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019年11月03日"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_mid"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_margin"/>
</RelativeLayout>