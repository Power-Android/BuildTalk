<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bjjy.buildtalk.ui.mine.BindPhoneActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/dp_59"
            android:layout_height="@dimen/dp_104"
            android:src="@drawable/bind_phone_icon"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前绑定的手机号"
            android:textColor="@color/text_light"
            android:textSize="@dimen/sp_15"
            android:layout_below="@+id/image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"/>
        <TextView
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17611248851"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_21"
            android:layout_below="@+id/text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"/>
        <TextView
            android:id="@+id/edit_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:text="更改手机号"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/shape_blue_5button"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_below="@+id/phone_tv"
            android:layout_marginTop="@dimen/dp_70"/>
    </RelativeLayout>
</LinearLayout>
