<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_selector"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/dp_93"
        android:layout_height="@dimen/dp_93"
        android:src="@drawable/test_course"
        app:riv_corner_radius="@dimen/dp_5"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_marginLeft="@dimen/dp_15"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="ArchCAD建筑模型sss"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/text_drak"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/item_period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新至37期"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/text_mid"
        android:layout_below="@+id/item_title_tv"
        android:layout_toRightOf="@id/item_img_iv"
        android:layout_marginLeft="@dimen/dp_15"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/dp_10"/>
    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_below="@id/item_period_tv"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="圈主：张鸣"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/text_mid"/>
        <ImageView
            android:id="@+id/item_tag_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_icon"
            android:layout_marginLeft="@dimen/dp_4"/>
        <TextView
            android:id="@+id/item_job_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目经理"
            android:textSize="@dimen/sp_10"
            android:textColor="@color/text_mid"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/item_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥300"
            android:textColor="@color/orange"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/item_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200人已加入"
            android:textColor="@color/text_light"
            android:textSize="@dimen/sp_10"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>