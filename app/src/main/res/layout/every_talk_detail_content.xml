<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativelayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/fl_VideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:clickable="true"
        android:visibility="gone">
        <cn.jzvd.JzvdStd
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/is_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_VideoPlayer"
        android:lineSpacingExtra="@dimen/dp_3"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/text_drak"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_10"/>
    <ImageView
        android:id="@+id/face_iv"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:scaleType="centerCrop"
        android:src="@drawable/moren_face"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@+id/title_tv"/>
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谭小建"
        android:layout_alignTop="@+id/face_iv"
        android:layout_toRightOf="@+id/face_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_12"
        android:includeFontPadding="false"/>
    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/face_iv"
        android:layout_toRightOf="@+id/face_iv"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_9"
        android:layout_marginLeft="@dimen/dp_10"/>
    <RelativeLayout
        android:id="@+id/media_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:visibility="gone"
        android:layout_below="@+id/face_iv"
        android:layout_margin="@dimen/common_margin"
        android:background="@drawable/shape_white_5radius"
        android:elevation="@dimen/dp_3">
        <RelativeLayout
            android:id="@+id/play_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20">
            <com.bjjy.buildtalk.weight.CircleProgressView
                android:id="@+id/progress_bar"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25"
                android:layout_centerInParent="true"
                app:progress_width="@dimen/dp_2"
                app:progress_color="@color/orange"
                app:location_start="top"/>
            <ImageView
                android:id="@+id/play_iv"
                android:layout_width="@dimen/dp_27"
                android:layout_height="@dimen/dp_27"
                android:layout_centerInParent="true"
                android:src="@drawable/media_play_icon"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/playing_iv"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_20"
            android:visibility="invisible"
            android:src="@drawable/playing"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"/>
        <TextView
            android:id="@+id/media_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/playing_iv"
            android:includeFontPadding="false"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_15"
            android:layout_toRightOf="@+id/play_rl"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:singleLine="true"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/play_content_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/play_rl"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_12">
            <TextView
                android:id="@+id/media_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="0分钟0秒"
                android:textColor="@color/blue_mid"
                android:textSize="@dimen/sp_10" />
            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_9"
                android:background="@color/blue_mid"
                android:layout_marginLeft="@dimen/dp_10"/>
            <TextView
                android:id="@+id/media_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="0M"
                android:textColor="@color/blue_mid"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_10"/>
        </LinearLayout>
    </RelativeLayout>
    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/media_rl"/>
</RelativeLayout>