<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_309"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:text="查看指定内容"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_mid"
        android:gravity="center"
        android:background="@drawable/shape_gray_top_5radius"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:background="@color/white">
        <TextView
            android:id="@+id/type1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="全部主题"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_mid"
            android:drawableTop="@drawable/qbzt_icon"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"/>
        <TextView
            android:id="@+id/type2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="图片主题"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_mid"
            android:drawableTop="@drawable/tpzt_icon"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"/>
        <TextView
            android:id="@+id/type3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="只看圈主"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_mid"
            android:drawableTop="@drawable/zkqz_icon"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15"
        android:weightSum="3"
        android:background="@drawable/shape_white_btm_5radius">
        <TextView
            android:id="@+id/type4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的主题"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_mid"
            android:drawableTop="@drawable/wdzt_icon"
            android:gravity="center"
            android:drawablePadding="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>