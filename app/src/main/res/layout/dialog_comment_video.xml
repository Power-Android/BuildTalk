<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:id="@+id/top_rl"
    android:background="@drawable/shape_white_top_22raidus">
    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部评论 4"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_color7"
        android:textStyle="bold"
        android:layout_margin="@dimen/common_margin"/>
    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="@dimen/dp_42"
        android:layout_height="@dimen/dp_42"
        android:src="@drawable/close_black_icon"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/common_margin"
        android:layout_marginTop="@dimen/dp_4"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/comment_tv"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_gray_25radius"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginStart="@dimen/common_margin"
            android:paddingLeft="@dimen/common_margin"
            android:paddingEnd="@dimen/common_margin"
            android:hint="说点什么..."
            android:gravity="center_vertical"
            android:textColorHint="@color/text_color6"
            android:textColor="@color/text_color6"
            android:textSize="@dimen/sp_13"
            android:layout_toLeftOf="@+id/send_tv"/>
        <TextView
            android:id="@+id/send_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送"
            android:textColor="@color/blue_mid"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/common_margin"
            android:layout_marginStart="@dimen/common_margin"/>
    </RelativeLayout>
</RelativeLayout>