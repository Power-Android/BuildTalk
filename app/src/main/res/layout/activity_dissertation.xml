<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.discover.DissertationActivity">
    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_layout"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/include_toolbar"
        android:layout_marginBottom="@dimen/dp_30"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/pic_iv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:scaleType="centerCrop"/>
            <com.bjjy.buildtalk.weight.tablayout.TabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                app:tabBackground="@android:color/transparent"
                app:tabDividerWidthWidthText="true"
                app:tabGravity="fill"
                app:tabIndicatorColor="@color/blue_mid"
                app:tabIndicatorHeight="@dimen/dp_2"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/blue_mid"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                app:tabTextColor="@color/text_mid"/>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <TextView
        android:id="@+id/banquan_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:textSize="@dimen/sp_13"
        android:layout_alignParentBottom="true"
        android:text="@string/app_name"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/black"/>
</RelativeLayout>