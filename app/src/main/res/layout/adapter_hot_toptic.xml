<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:layout_marginBottom="@dimen/dp_6"
    android:layout_marginLeft="@dimen/dp_7_5"
    android:layout_marginRight="@dimen/dp_7_5"
    android:layout_marginTop="@dimen/dp_6">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/toptic_iv"
        android:layout_width="@dimen/dp_78"
        android:layout_height="@dimen/dp_78"
        android:src="@drawable/test_toptic"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/dp_5" />
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="@dimen/dp_78"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:includeFontPadding="false"
        android:gravity="start"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_drak"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/toptic_iv" />

</RelativeLayout>