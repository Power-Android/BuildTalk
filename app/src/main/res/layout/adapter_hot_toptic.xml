<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:layout_marginBottom="@dimen/dp_8"
    android:layout_marginLeft="@dimen/dp_7_5"
    android:layout_marginRight="@dimen/dp_7_5"
    android:layout_marginTop="@dimen/dp_8">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/toptic_iv"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_105"
        android:src="@drawable/test_toptic"
        app:riv_corner_radius_top_left="@dimen/dp_5"
        app:riv_corner_radius_top_right="@dimen/dp_5" />

    <LinearLayout
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/toptic_iv"
        android:orientation="vertical"
        android:background="@drawable/shape_toptic_5radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="建筑结构"
            android:singleLine="true"
            android:maxLength="6"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_drak"
            android:layout_marginTop="@dimen/dp_10"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_gravity="center_horizontal"
            android:text="刘新科"
            android:singleLine="true"
            android:maxLength="6"
            android:textColor="@color/text_mid"
            android:textSize="@dimen/sp_11"
            android:drawableRight="@drawable/tag_icon"
            android:drawablePadding="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_5"/>
    </LinearLayout>

</RelativeLayout>