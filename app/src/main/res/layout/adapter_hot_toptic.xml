<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:layout_marginBottom="@dimen/dp_6"
    android:layout_marginLeft="@dimen/dp_7_5"
    android:layout_marginRight="@dimen/dp_7_5"
    android:layout_marginTop="@dimen/dp_6">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/toptic_iv"
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_105"
        android:src="@drawable/test_toptic"
        android:scaleType="centerCrop"
        app:riv_corner_radius_top_left="@dimen/dp_5"
        app:riv_corner_radius_top_right="@dimen/dp_5" />

    <LinearLayout
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/toptic_iv"
        android:orientation="vertical"
        android:background="@drawable/shape_toptic_5radius">

        <TextView
            android:id="@+id/item_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:includeFontPadding="false"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_drak"
            android:layout_marginTop="@dimen/dp_10"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5">
            <TextView
                android:id="@+id/item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:gravity="center"
                android:text="@string/app_name"
                android:layout_centerInParent="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/text_mid"
                android:textSize="@dimen/sp_11" />
            <ImageView
                android:id="@+id/item_tag_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_name_tv"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@drawable/tag_icon"
                android:layout_marginLeft="@dimen/dp_4"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>