<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:layout_marginBottom="@dimen/dp_6"
    android:layout_marginLeft="@dimen/dp_7_5"
    android:layout_marginRight="@dimen/dp_7_5"
    android:layout_marginTop="@dimen/dp_6">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/project_iv"
        android:layout_width="@dimen/dp_165"
        android:layout_height="@dimen/dp_98"
        android:scaleType="centerCrop"
        android:src="@drawable/zhuanti_icon"
        app:riv_corner_radius="@dimen/dp_5" />
    <TextView
        android:id="@+id/course_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/project_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:includeFontPadding="false"
        android:maxLength="15"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="建筑工业互联网峰会"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_12" />

</RelativeLayout>