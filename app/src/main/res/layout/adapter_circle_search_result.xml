<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/dp_15">
    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_72">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/item_face_iv"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_alignParentBottom="true"
            android:src="@drawable/test_course"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_5"/>
        <ImageView
            android:id="@+id/isCourse"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            android:src="@drawable/circle_class_icon"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/view1"
        android:layout_marginLeft="@dimen/dp_20"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圈主：张鸣"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/sp_11"
        android:layout_below="@id/item_title_tv"
        android:layout_toRightOf="@+id/view1"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"/>
    <ImageView
        android:id="@+id/isMaster"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:src="@drawable/tag_icon"
        android:layout_toRightOf="@+id/item_name_tv"
        android:layout_alignTop="@+id/item_name_tv"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"/>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:max_select="0"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/view1"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_10"/>
</RelativeLayout>