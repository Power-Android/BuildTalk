<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.bjjy.buildtalk.ui.circle.CreateCircleActivity">

    <include layout="@layout/toolbar_layout" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:overScrollMode="never">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/view2"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_175"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_40">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/circle_iv"
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="@dimen/dp_120"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius_top_right="@dimen/dp_5"
                    app:riv_corner_radius_top_left="@dimen/dp_5"
                    android:background="@drawable/shape_circle_top_5radius" />

                <LinearLayout
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_72"
                    android:layout_below="@+id/circle_iv"
                    android:layout_marginTop="@dimen/dp_m_1"
                    android:background="@drawable/shape_circle_5radius"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/circle_title_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:background="@null"
                        android:hint="圈子名称"
                        android:textColorHint="@color/text_drak"
                        android:textColor="@color/text_drak"
                        android:textSize="@dimen/sp_13" />

                </LinearLayout>
            </RelativeLayout>


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_20"
                android:paddingLeft="@dimen/common_margin"
                android:paddingRight="@dimen/dp_20"
                app:max_select="5"
                android:layout_below="@+id/view2"/>

            <TextView
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp_126"
                android:padding="@dimen/dp_15"
                android:gravity="start"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_drak"
                android:maxLength="200"
                android:layout_below="@+id/flow_layout"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_30"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
