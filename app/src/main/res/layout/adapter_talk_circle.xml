<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingLeft="@dimen/dp_7_5"
    android:paddingRight="@dimen/dp_7_5"
    android:paddingTop="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="@dimen/dp_105"
        android:layout_height="@dimen/dp_160"
        android:background="@drawable/shape_course_5radius">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_face_iv"
            android:layout_width="@dimen/dp_69"
            android:layout_height="@dimen/dp_69"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15" />

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_face_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_7"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/item_tag_iv"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:visibility="gone"
            android:src="@drawable/tag_icon"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_toRightOf="@+id/item_name_tv"
            android:layout_below="@id/item_face_iv"
            android:layout_marginTop="@dimen/dp_10"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人已关注"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_focus_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:background="@drawable/shape_course_5radius"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/item_focus_iv"
                android:layout_width="@dimen/dp_8"
                android:layout_height="@dimen/dp_8"
                android:src="@drawable/check_icon"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_5"/>
            <TextView
                android:id="@+id/item_focus_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+关注"
                android:textSize="@dimen/sp_11"/>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>