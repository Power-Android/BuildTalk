<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_8"
    android:paddingLeft="@dimen/dp_7_5"
    android:paddingRight="@dimen/dp_7_5"
    android:paddingTop="@dimen/dp_8">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_course_5radius"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/course_iv"
            android:layout_width="@dimen/dp_165"
            android:layout_height="@dimen/dp_93"
            android:src="@drawable/test_course"
            app:riv_corner_radius_top_left="@dimen/dp_5"
            app:riv_corner_radius_top_right="@dimen/dp_5" />

        <RelativeLayout
            android:layout_width="@dimen/dp_165"
            android:layout_height="@dimen/dp_58"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:maxLength="11"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="ArchCAD建筑模型"
                android:textColor="@color/text_drak"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/course_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_title_tv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:drawablePadding="@dimen/dp_4"
                android:drawableRight="@drawable/tag_icon"
                android:includeFontPadding="false"
                android:maxLength="6"
                android:singleLine="true"
                android:text="顾雍陶"
                android:textColor="@color/text_mid"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/course_job_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/course_name_tv"
                android:layout_below="@+id/course_title_tv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="项目经理"
                android:includeFontPadding="false"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/text_mid"
                android:textSize="@dimen/sp_11" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>