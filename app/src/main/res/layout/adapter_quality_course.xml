<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    >

    <LinearLayout
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_7_5"
        android:layout_marginLeft="@dimen/dp_7_5"
        android:layout_marginRight="@dimen/dp_7_5"
        android:layout_marginTop="@dimen/dp_7_5"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/course_iv"
            android:layout_width="@dimen/dp_138"
            android:layout_height="@dimen/dp_77"
            android:src="@drawable/test_course"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_3"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/app_name"
                android:textColor="@color/text_drak"
                android:textSize="@dimen/sp_15" />
            <LinearLayout
                android:id="@+id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/course_title_tv"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/course_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:maxLength="6"
                    android:text="@string/app_name"
                    android:singleLine="true"
                    android:textColor="@color/text_color6"
                    android:textSize="@dimen/sp_11" />

                <ImageView
                    android:id="@+id/course_tag_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/tag_icon"
                    android:layout_marginLeft="@dimen/dp_4"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/course_job_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/view1"
                android:layout_below="@+id/course_title_tv"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:text="更新至27讲"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/text_color6"
                android:textSize="@dimen/sp_11" />

            <TextView
                android:id="@+id/item_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1990.00"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/common_margin"/>
            <TextView
                android:id="@+id/try_tv"
                android:layout_width="@dimen/dp_48"
                android:layout_height="@dimen/dp_22"
                android:text="试看"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_11"
                android:layout_marginEnd="@dimen/common_margin"
                android:background="@drawable/shape_gray_15radius"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/border6"
        android:layout_below="@+id/view2"
        android:layout_marginTop="@dimen/dp_7_5"
        android:layout_marginBottom="@dimen/dp_7_5"/>
</RelativeLayout>