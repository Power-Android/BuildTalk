<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bjjy.buildtalk.ui.mine.EditNameActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">
        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white"
            android:layout_marginTop="@dimen/dp_15">
            <com.bjjy.buildtalk.weight.ClearEditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:textColorHint="@color/text_light"
                android:textColor="@color/text_mid"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:maxLength="15"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/sp_15"
                android:background="@null" />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_20">
            <EditText
                android:id="@+id/content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minLines="15"
                android:gravity="start"
                android:maxLength="2000"
                android:hint="请填写..."
                android:padding="@dimen/common_margin"
                android:textColor="@color/text_mid"
                android:textColorHint="@color/text_mid"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/edit_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:text="0/2000个字"
                android:textColor="@color/text_light"
                android:textSize="12sp" />
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
