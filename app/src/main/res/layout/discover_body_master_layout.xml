<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="@dimen/common_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@+id/icon1"
            android:includeFontPadding="false"
            android:text="关注大咖，了解行业新动态~"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/master_change_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/master_change_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/change_blue_icon"
                android:layout_toLeftOf="@+id/master_all_tv" />
            <TextView
                android:id="@+id/master_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/common_margin"
                android:includeFontPadding="false"
                android:text="换一换"
                android:textColor="@color/blue_mid"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/master_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_7_5"
        android:layout_marginRight="@dimen/dp_7_5"
        android:layout_marginTop="@dimen/dp_10"
        android:overScrollMode="never" />
    <TextView
        android:id="@+id/master_more_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:text="查看更多"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_mid"
        android:background="@drawable/shape_gray_5radius"
        android:layout_below="@+id/master_recyclerView"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin"
        android:layout_marginBottom="@dimen/dp_20"/>
</RelativeLayout>