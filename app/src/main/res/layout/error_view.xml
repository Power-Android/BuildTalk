<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/errorView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/toolbar_layout"/>

    <ImageView
        android:id="@+id/error_view_img"
        android:layout_width="@dimen/dp_317"
        android:layout_height="@dimen/dp_240"
        android:src="@drawable/empty_404_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_100"/>
    <TextView
        android:id="@+id/error_view_404"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/error_view_img"
        android:text="404"
        android:textSize="@dimen/sp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/text_mid"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>
    <TextView
        android:id="@+id/error_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您访问的页面去太空游玩了~"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_light"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/error_view_404"
        android:layout_marginTop="@dimen/dp_10"/>
</RelativeLayout>