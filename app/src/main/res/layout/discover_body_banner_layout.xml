<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        app:delay_time="4000"
        app:scroll_time="1000"
        app:indicator_drawable_selected="@drawable/shape_banner_sel"
        app:indicator_drawable_unselected="@drawable/shape_banner_def"
        app:indicator_width="@dimen/dp_20"
        app:indicator_height="@dimen/dp_2"/>
</RelativeLayout>