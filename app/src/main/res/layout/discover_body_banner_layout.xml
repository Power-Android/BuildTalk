<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_145"
            app:delay_time="3000"
            app:scroll_time="1000"
            app:indicator_drawable_selected="@drawable/shape_banner_sel"
            app:indicator_drawable_unselected="@drawable/shape_banner_def"
            app:indicator_width="@dimen/dp_12"
            app:indicator_height="@dimen/dp_2"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>