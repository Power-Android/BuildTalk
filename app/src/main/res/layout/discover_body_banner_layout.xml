<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_145"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_145"
            app:delay_time="3000"
            app:scroll_time="1000"
            app:indicator_drawable_selected="@drawable/shape_banner_sel"
            app:indicator_drawable_unselected="@drawable/shape_banner_def"
            app:indicator_width="@dimen/dp_12"
            app:indicator_height="@dimen/dp_2"/>
    </android.support.v7.widget.CardView>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_marginTop="@dimen/common_margin">
        <TextView
            android:id="@+id/toptic_jump_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="话题圈"
            android:textColor="@color/text_color7"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="spread"
            android:drawableTop="@drawable/toptic_home_icon"
            android:drawablePadding="@dimen/dp_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_25"/>
        <TextView
            android:id="@+id/class_jump_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="精品课"
            android:textColor="@color/text_color7"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:drawableTop="@drawable/class_home_icon"
            android:drawablePadding="@dimen/dp_5"
            app:layout_constraintStart_toEndOf="@+id/toptic_jump_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/talk_jump_tv"/>
        <TextView
            android:id="@+id/talk_jump_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谈主"
            android:textColor="@color/text_color7"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:drawableTop="@drawable/talk_home_icon"
            android:drawablePadding="@dimen/dp_5"
            app:layout_constraintStart_toEndOf="@+id/class_jump_tv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dissertation_jump_tv"/>
        <TextView
            android:id="@+id/dissertation_jump_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专题"
            android:textColor="@color/text_color7"
            android:textSize="@dimen/sp_13"
            android:gravity="center"
            android:drawableTop="@drawable/zhuanti_home_icon"
            android:drawablePadding="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_25"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:layout_below="@+id/view3">
        <View
            android:id="@+id/bg_iv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_78"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginStart="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_7"
            android:background="@drawable/home_every_talk_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.bjjy.buildtalk.weight.CircleProgressView
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_centerInParent="true"
            app:progress_width="@dimen/dp_2"
            app:progress_color="@color/oranger3"
            app:location_start="top"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bg_iv"
            app:layout_constraintBottom_toBottomOf="@+id/bg_iv"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rotate_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/media_face_icon"
            app:layout_constraintStart_toStartOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"/>
        <ImageView
            android:id="@+id/talk_play_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/home_talk_play"
            android:padding="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="@+id/progress_bar"
            app:layout_constraintTop_toTopOf="@+id/progress_bar"
            app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
            app:layout_constraintEnd_toEndOf="@+id/progress_bar"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="每日一谈"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:textColor="@color/text_color7"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_18"
            app:layout_constraintTop_toTopOf="@+id/bg_iv"
            app:layout_constraintStart_toEndOf="@+id/progress_bar"/>
        <TextView
            android:id="@+id/content_tv"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_mid"
            android:singleLine="true"
            android:ellipsize="end"
            android:inputType="text"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/progress_bar"/>
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@drawable/arrow_right_media_icon"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_23"
            app:layout_constraintTop_toTopOf="@+id/bg_iv"
            app:layout_constraintEnd_toEndOf="@+id/bg_iv" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>