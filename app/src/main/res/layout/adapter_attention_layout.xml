<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_face_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/moren_face"
            android:layout_marginStart="@dimen/common_margin"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:id="@+id/item_tag_iv"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/tag_icon"
            app:layout_constraintEnd_toEndOf="@+id/item_face_iv"
            app:layout_constraintBottom_toBottomOf="@+id/item_face_iv"/>
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/oranger3"
            android:textSize="@dimen/sp_13"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintStart_toEndOf="@+id/item_face_iv"
            app:layout_constraintTop_toTopOf="@+id/item_face_iv"/>
        <TextView
            android:id="@+id/item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2小时前"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_color6"
            app:layout_constraintTop_toBottomOf="@+id/item_name_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"/>
        <TextView
            android:id="@+id/item_from_tv"
            android:layout_width="@dimen/dp_150"
            android:layout_height="wrap_content"
            android:text=" 来自圈子 知晓建筑的经济学..."
            android:singleLine="true"
            android:maxLength="14"
            android:ellipsize="end"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_color6"
            app:layout_constraintStart_toEndOf="@+id/item_time_tv"
            app:layout_constraintTop_toBottomOf="@+id/item_name_tv"/>
        <ImageView
            android:id="@+id/item_more_iv"
            android:layout_width="@dimen/dp_31"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/item_more_icon"
            android:paddingEnd="@dimen/common_margin"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_face_iv" />
        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:background="@drawable/shape_gray_13radius"
            android:layout_marginEnd="@dimen/dp_2"
            app:layout_constraintEnd_toStartOf="@+id/item_more_iv"
            app:layout_constraintTop_toTopOf="@+id/item_more_iv">
            <ImageView
                android:id="@+id/item_atten_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/attention_def"
                android:layout_marginEnd="@dimen/dp_5"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/item_atten_tv"/>
            <TextView
                android:id="@+id/item_atten_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已关注"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/text_color6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_atten_iv"
                app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <TextView
            android:id="@+id/item_content_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="五一特别分享专栏\n【跟着笑楠长建识】征信系列五连发（一）征信系统有广义和狭义之分，广义上指覆盖全社会环境各个体系的信用系统，狭义上一般指我要带大家了解的中国人民银行的信贷…"
            android:textColor="@color/text_color7"
            android:textSize="@dimen/sp_15"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="5"
            android:layout_marginEnd="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@+id/item_time_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.bjjy.buildtalk.weight.MultiImageView
            android:id="@+id/item_grid_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintTop_toBottomOf="@+id/item_content_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/item_vertical_video_view"
            android:layout_width="@dimen/dp_201"
            android:layout_height="@dimen/dp_268"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@+id/item_content_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"/>
        <com.tencent.rtmp.ui.TXCloudVideoView
            android:id="@+id/item_horizontal_video_view"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_170"
            android:layout_marginTop="@dimen/common_margin"
            android:layout_marginEnd="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@+id/item_content_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"
            app:layout_constraintEnd_toEndOf="parent"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_pdf_recycler_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_margin"
            android:layout_marginTop="@dimen/common_margin"
            app:layout_constraintTop_toBottomOf="@+id/item_content_tv"
            app:layout_constraintStart_toStartOf="@+id/item_name_tv"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:paddingTop="@dimen/common_margin"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:id="@+id/item_praise_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginStart="@dimen/dp_55"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/praise_def" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="99"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text_color4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_record_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_praise_ll"
            app:layout_constraintEnd_toStartOf="@+id/item_share_ll">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/record_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99"
                android:layout_marginStart="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text_color4"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/item_share_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginEnd="@dimen/common_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:src="@drawable/share_icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:text="分享"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/text_color4"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/border5"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>