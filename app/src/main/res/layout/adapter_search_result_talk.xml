<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_face_iv"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/test_course"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dp_15"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/common_margin"
        android:text="@string/app_name"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/text_drak"
        android:textStyle="bold"
        android:textSize="@dimen/sp_12"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:id="@+id/item_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_9"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginTop="@dimen/dp_5"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="人已关注"
        android:textSize="@dimen/sp_9"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/item_num_tv"
        android:layout_below="@+id/item_name_tv" />
   <ImageView
       android:layout_width="@dimen/dp_13"
       android:layout_height="@dimen/dp_13"
       android:src="@drawable/arrow_right_black"
       android:layout_alignParentRight="true"
       android:layout_centerVertical="true"/>
</RelativeLayout>