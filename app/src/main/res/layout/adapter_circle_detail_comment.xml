<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_margin">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_face_iv"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@drawable/test_course"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="傲慢偏见"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_drak"/>
    <TextView
        android:id="@+id/item_master_tv"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_13"
        android:text="圈主"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_1"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_10"
        android:background="@drawable/shape_orange_1radius"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_toRightOf="@+id/item_name_tv"
        android:layout_marginLeft="@dimen/dp_10"/>
    <TextView
        android:id="@+id/item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:text="2019-05-07 17:47:36"
        android:textColor="@color/text_light"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/common_margin">

        <LinearLayout
            android:id="@+id/item_praise_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_praise_iv"
                android:layout_width="@dimen/dp_12"
                android:layout_height="@dimen/dp_12"
                android:src="@drawable/praise_def"
                android:layout_marginRight="@dimen/dp_6"/>
            <TextView
                android:id="@+id/item_praise_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_light"
                android:textSize="@dimen/sp_9" />
        </LinearLayout>
        <ImageView
            android:id="@+id/item_delete_iv"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@drawable/delete_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:autoLink="web"
        android:text="一点新素材希望能帮到大家"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_drak"
        android:layout_below="@+id/item_time_tv"
        android:layout_toRightOf="@+id/item_face_iv"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_marginLeft="@dimen/dp_10"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/comment_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/item_content_tv"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/border3"
        android:layout_below="@+id/comment_recyclerView"
        android:layout_marginTop="@dimen/dp_15"/>
</RelativeLayout>