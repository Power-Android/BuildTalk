<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/common_margin"
        android:text="秧美的NOIR系列，如果出于传播和咨询方便等目的"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_drak" />
    <RelativeLayout
        android:id="@+id/view_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_content_tv"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/app_name"
            android:textColor="@color/text_light"
            android:textSize="@dimen/sp_11"
            android:layout_marginLeft="@dimen/common_margin" />
        <View
            android:id="@+id/view1"
            android:layout_width="@dimen/dp_1"
            android:layout_height="@dimen/dp_10"
            android:background="@color/border3"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_name_tv"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"/>
        <TextView
            android:id="@+id/item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建筑产业工业互联网"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_light"
            android:layout_toRightOf="@+id/view1"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border3"
        android:layout_below="@+id/view_rl"
        android:layout_marginTop="@dimen/dp_15"/>
</RelativeLayout>