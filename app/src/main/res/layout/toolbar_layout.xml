<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/include_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    android:background="@color/white"
    android:orientation="vertical"
    app:elevation="0dp">

    <ImageView
        android:id="@+id/toolbar_left_back"
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_20"
        android:src="@drawable/arrow_left_black_icon"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/common_margin"/>

    <TextView
        android:id="@+id/toolbar_left_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_17" />

    <TextView
        android:id="@+id/toolbar_right_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:singleLine="true"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/toolbar_right_publish"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_24"
        android:gravity="center"
        android:background="@drawable/shape_blue_25button"
        android:text="发表"
        android:alpha="0.5"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/toolbar_right_search"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/titile_search_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/toolbar_right_collect"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:visibility="gone"
        android:src="@drawable/collect_def_icon"
        android:layout_toLeftOf="@+id/toolbar_right_share"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/toolbar_right_share"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_marginRight="@dimen/common_margin"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/share_blue_icon"
        android:visibility="gone" />
</RelativeLayout>