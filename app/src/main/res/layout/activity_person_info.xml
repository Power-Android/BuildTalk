<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bjjy.buildtalk.ui.mine.PersonInfoActivity">
    <include layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:id="@+id/person_page"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"
        android:background="@drawable/item_selector"
        android:layout_marginTop="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person_page"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/view1"
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:src="@drawable/arrow_right_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/face_iv"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_toLeftOf="@+id/view1"
            android:src="@drawable/test_course"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/border3"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/master_verify"
        android:background="@drawable/item_selector"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/higher_ups_certification"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/view2"
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:src="@drawable/arrow_right_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin"/>
        <TextView
            android:id="@+id/verify_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/view2"
            android:text="未认证"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_mid"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/common_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/border3"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
