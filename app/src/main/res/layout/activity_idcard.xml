<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mine.IDCardActivity">
    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8F8F8"
        android:layout_below="@+id/include_toolbar">
        <ImageView
            android:id="@+id/zhengmian_iv"
            android:layout_width="@dimen/dp_322"
            android:layout_height="@dimen/dp_172"
            android:scaleType="fitXY"
            android:src="@drawable/card_zhengmian"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_40"/>
        <ImageView
            android:id="@+id/beimian_iv"
            android:layout_width="@dimen/dp_322"
            android:layout_height="@dimen/dp_172"
            android:scaleType="fitXY"
            android:src="@drawable/card_beimian"
            android:layout_below="@+id/zhengmian_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_30"/>
        <TextView
            android:id="@+id/upload_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:text="开始上传"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:background="@drawable/shape_blue_25button"
            android:layout_below="@+id/beimian_iv"
            android:layout_marginTop="@dimen/dp_40"
            android:alpha="0.5"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="信息仅用于身份认证，建谈保障您的信息安全"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/text_mid"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_20"
        android:drawableLeft="@drawable/app_card_icon"/>
</RelativeLayout>