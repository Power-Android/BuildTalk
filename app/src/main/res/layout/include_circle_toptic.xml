<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_20">
    <RelativeLayout
        android:id="@+id/column_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_marginRight="@dimen/dp_5">
        <ImageView
            android:id="@+id/item_praise_iv"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/praise_def"
            android:padding="@dimen/dp_6" />
        <ImageView
            android:id="@+id/item_comment_iv"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/record_icon"
            android:padding="@dimen/dp_6"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/item_share_iv"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@drawable/share_icon"
            android:padding="@dimen/dp_6"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/praise_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/column_rl"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_45">
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:src="@drawable/praise_gray_icon"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/praise_tv"
            android:includeFontPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="傲慢偏见，建筑大师的大师，我是你兄弟，辛德瑞拉，心语心愿"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/text_light"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/comment_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/praise_rl">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_55"
            android:focusable="false"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"/>
        <TextView
            android:id="@+id/more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/look_more"
            android:textColor="@color/blue_mid"
            android:textSize="@dimen/sp_11"
            android:drawableRight="@drawable/arrow_right_blue_icon"
            android:layout_below="@+id/recycler_view"
            android:layout_marginLeft="@dimen/dp_55"
            android:drawablePadding="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_10"/>
    </RelativeLayout>

</RelativeLayout>