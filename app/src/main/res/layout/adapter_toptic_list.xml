<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_selector"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_img_iv"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:src="@drawable/test_toptic"
        app:riv_corner_radius="@dimen/dp_5"
        android:scaleType="centerCrop"/>
    <TextView
        android:id="@+id/item_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_marginLeft="@dimen/dp_15"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="建筑产业工业互联网联盟"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_drak"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_below="@id/item_title_tv"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="圈主：张鸣"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/text_mid"/>
        <ImageView
            android:id="@+id/item_tag_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tag_icon"
            android:layout_marginLeft="@dimen/dp_4"/>
    </LinearLayout>
    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@+id/item_img_iv"
        android:layout_marginLeft="@dimen/dp_12"
        app:max_select="0"/>
</RelativeLayout>