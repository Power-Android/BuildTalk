<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bjjy.buildtalk.ui.circle.CourseDetailActivity">
    <FrameLayout
        android:id="@+id/fl_VideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_210">
        <cn.jzvd.JzvdStd
            android:id="@+id/videoplayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fl_VideoPlayer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:id="@+id/chapter_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01讲  ArchCAD简介"
                    android:textColor="@color/text_drak"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_15"/>
                <LinearLayout
                    android:id="@+id/more_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="章节内容"
                        android:textSize="@dimen/sp_10"
                        android:textColor="@color/text_light"
                        android:layout_marginRight="@dimen/dp_4"/>
                    <ImageView
                        android:id="@+id/xq_expand_iv"
                        android:layout_width="@dimen/dp_9"
                        android:layout_height="@dimen/dp_9"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/sanjiao_icon"
                        android:layout_marginRight="@dimen/dp_5"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/only_play_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:background="@drawable/shape_gray_5radius">
                <ImageView
                    android:id="@+id/view7"
                    android:layout_width="@dimen/dp_21"
                    android:layout_height="@dimen/dp_21"
                    android:src="@drawable/video_tag_icon"
                    android:layout_margin="@dimen/dp_10"/>
                <TextView
                    android:id="@+id/item_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/view7"
                    android:textColor="@color/text_drak"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:src="@drawable/shikan_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/list_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/update_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="更新至37讲/ 全100讲"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/text_light"
                    android:layout_marginRight="@dimen/dp_4"/>
                <ImageView
                    android:id="@+id/gx_expand_iv"
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_9"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/sanjiao_icon"
                    android:layout_marginRight="@dimen/dp_5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="精选主题"
                    android:textColor="@color/text_drak"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/common_margin"/>
                <TextView
                    android:id="@+id/num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/text_light"
                    android:layout_marginLeft="@dimen/dp_5"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <RelativeLayout
        android:id="@+id/top_title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_44"
                android:paddingBottom="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingTop="@dimen/dp_12"
                android:src="@drawable/arrow_left_white_icon" />

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/pre_share_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/share_icon_white" />

            <ImageView
                android:id="@+id/share_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_toLeftOf="@+id/more_iv"
                android:padding="@dimen/dp_10"
                android:src="@drawable/share_icon_white"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/more_iv"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/toolbar_right_more_icon"
                android:visibility="gone" />
        </RelativeLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/join_tv"
        android:layout_width="@dimen/dp_245"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/shape_blue_25button"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/chapter_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/fl_VideoPlayer"
        android:layout_marginTop="@dimen/dp_40"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/content_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@+id/fl_VideoPlayer"
        android:layout_marginTop="@dimen/dp_40">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/chapter_content_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
