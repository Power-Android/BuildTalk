<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_face_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/test_course"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/common_margin"/>
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_13"
            android:text="@string/app_name"
            android:layout_alignTop="@+id/item_face_iv"
            android:layout_toRightOf="@+id/item_face_iv"
            android:layout_marginLeft="@dimen/dp_10"/>
        <TextView
            android:id="@+id/item_job_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="圈主"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10"
            android:background="@drawable/shape_orange_1radius"
            android:layout_toRightOf="@+id/item_name_tv"
            android:layout_alignTop="@+id/item_face_iv"
            android:layout_marginLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"/>
        <TextView
            android:id="@+id/item_top_tv"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_14"
            android:visibility="gone"
            android:text="置顶"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_10"
            android:textColor="#8F8F8F"
            android:background="@drawable/shape_gray_1radius"
            android:gravity="center"
            android:layout_toRightOf="@+id/item_job_tv"
            android:layout_alignTop="@id/item_face_iv"
            android:layout_marginLeft="@dimen/dp_5"/>
        <ImageView
            android:id="@+id/item_more_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_5"
            android:src="@drawable/item_more_icon"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_face_iv"/>
        <TextView
            android:id="@+id/item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/sp_9"
            android:textColor="@color/text_light"
            android:text="2019-05-23 15:06:50"
            android:layout_alignBottom="@+id/item_face_iv"
            android:layout_toRightOf="@+id/item_face_iv"
            android:layout_marginLeft="@dimen/dp_10"/>
        <LinearLayout
            android:id="@+id/content_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_face_iv"
            android:layout_below="@+id/item_face_iv"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="18"
                android:ellipsize="end"
                android:autoLink="web"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="今年流行的几种装修材料"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/text_drak"
                android:layout_marginTop="@dimen/dp_10"/>
            <TextView
                android:id="@+id/content_more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="@string/look_more"
                android:textColor="@color/blue_mid"
                android:textSize="@dimen/sp_11"
                android:drawableRight="@drawable/arrow_right_blue_icon"
                android:drawablePadding="@dimen/dp_3"
                android:layout_marginTop="@dimen/dp_10"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_img_iv"
            android:layout_width="@dimen/dp_205"
            android:layout_height="@dimen/dp_205"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_below="@+id/content_ll"
            android:layout_toRightOf="@+id/item_face_iv"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"/>
        <com.bjjy.buildtalk.weight.NoScrollGridView
            android:id="@+id/item_grid_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numColumns="3"
            android:stretchMode="none"
            android:background="@color/white"
            android:columnWidth="@dimen/dp_104"
            android:gravity="center"
            android:listSelector="@android:color/transparent"
            android:layout_below="@+id/content_ll"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/item_face_iv"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"/>
    </RelativeLayout>
    <include layout="@layout/include_circle_toptic"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/border3"
        android:layout_marginTop="@dimen/dp_10"/>
</LinearLayout>