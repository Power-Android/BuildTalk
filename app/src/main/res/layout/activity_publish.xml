<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/normalView"
    tools:context="com.bjjy.buildtalk.ui.circle.PublishActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/include_toolbar"
        android:paddingBottom="@dimen/dp_45"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/publish_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:hint="说点什么..."
                android:maxLength="2000"
                android:ellipsize="end"
                android:minHeight="@dimen/dp_85"
                android:padding="@dimen/dp_15"
                android:textColor="@color/text_mid"
                android:textColorHint="@color/text_color6"
                android:textSize="@dimen/sp_14" />

            <com.bjjy.buildtalk.weight.NoScrollGridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:columnWidth="@dimen/dp_116"
                android:gravity="center"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:stretchMode="none" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin"
                android:background="@color/white"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/common_margin"
                android:layout_marginEnd="@dimen/common_margin">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同步到发现"
                    android:textSize="@dimen/sp_13"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_color7"/>
                <com.suke.widget.SwitchButton
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_26"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    app:sb_checked="true"
                    app:sb_checked_color="@color/colorAccent"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/pic_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:background="@color/border6">

        <ImageView
            android:id="@+id/sel_pic_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:src="@drawable/picture_icon" />
        <ImageView
            android:id="@+id/sel_video_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_toRightOf="@+id/sel_pic_iv"
            android:src="@drawable/upload_video_icon" />
        <ImageView
            android:id="@+id/sel_pdf_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_toRightOf="@+id/sel_video_iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:src="@drawable/upload_pdf" />
    </RelativeLayout>
</RelativeLayout>
