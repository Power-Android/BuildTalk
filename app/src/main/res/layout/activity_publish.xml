<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/normalView"
    tools:context="com.bjjy.buildtalk.ui.circle.PublishActivity">

    <include
        android:id="@+id/include_toolbar"
        layout="@layout/toolbar_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/include_toolbar"
        android:overScrollMode="never">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/publish_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="start"
                android:hint="说点什么..."
                android:maxLength="2000"
                android:ellipsize="end"
                android:minHeight="@dimen/dp_70"
                android:padding="@dimen/dp_15"
                android:textColor="@color/text_mid"
                android:textColorHint="@color/text_mid"
                android:textSize="@dimen/sp_14" />

            <com.bjjy.buildtalk.weight.NoScrollGridView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:columnWidth="@dimen/dp_116"
                android:gravity="center"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:stretchMode="none" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/pic_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:background="@color/background">

        <ImageView
            android:id="@+id/sel_pic_iv"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/picture_icon" />
    </RelativeLayout>
</RelativeLayout>
