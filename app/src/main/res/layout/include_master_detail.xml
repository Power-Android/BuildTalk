<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/master_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350"
        android:scaleType="centerCrop" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350"
        android:background="#020203"
        android:alpha="0.2"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/face_iv"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_marginTop="@dimen/dp_65"
        android:src="@drawable/moren_face"
        app:civ_border_width="@dimen/dp_1"
        app:civ_border_color="@color/white"
        android:layout_below="@+id/back_iv"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/app_name"
        android:layout_below="@+id/face_iv"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_21"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"/>
    <ImageView
        android:id="@+id/tag_iv"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:src="@drawable/tag_icon"
        android:layout_toRightOf="@+id/name_tv"
        android:layout_below="@+id/face_iv"
        android:layout_marginTop="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_6"/>
    <TextView
        android:id="@+id/job_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        android:layout_below="@+id/name_tv"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:id="@+id/focus_ll"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_22"
        android:layout_below="@+id/job_tv"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:background="@drawable/master_focus_bg">
        <ImageView
            android:id="@+id/focus_iv"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:src="@drawable/check_icon"
            android:visibility="gone"
            android:layout_marginRight="@dimen/dp_5"/>
        <TextView
            android:id="@+id/focus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+关注"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:layout_alignBottom="@+id/master_bg">
        <TextView
            android:id="@+id/circle_num_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0\n圈子"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_horizontal|bottom"/>
        <TextView
            android:id="@+id/fans_num_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0\n粉丝"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_horizontal|bottom"/>
        <TextView
            android:id="@+id/collect_num_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0\n收藏"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_horizontal|bottom"/>
        <TextView
            android:id="@+id/focus_num_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0\n关注"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:paddingBottom="@dimen/dp_15"
            android:gravity="center_horizontal|bottom"/>
    </LinearLayout>
</RelativeLayout>