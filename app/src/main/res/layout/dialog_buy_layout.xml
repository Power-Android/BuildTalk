<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_275"
    android:layout_height="@dimen/dp_138"
    android:background="@drawable/shape_white_5radius">
    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_drak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:text="解锁该文章后，才能观看哦"
        android:includeFontPadding="false"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_drak"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border3"
        android:layout_above="@+id/view1"/>
    <LinearLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/cancle_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/text_drak"
            android:gravity="center"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/border3"/>
        <TextView
            android:id="@+id/query_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="去解锁"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/blue_mid"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>