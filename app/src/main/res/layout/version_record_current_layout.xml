<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/common_margin"
    android:paddingRight="@dimen/common_margin">

    <TextView
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前版本"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/current_version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/view1"
        android:text="V2.0.1"
        android:textColor="@color/text_mid"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/current_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="@dimen/common_margin"
        android:text="优化了关注、圈主解散圈子、播放当前状态的显示问题，统一名词显示，新增话题圈子搜索、主题加精、每日一谈列表排序、建谈版本迭代记录功能。"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_content_tv"
        android:layout_marginTop="@dimen/dp_20"
        android:text="历史版本"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_15"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/dp_10"/>
</RelativeLayout>
