<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/include_toolbar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    android:orientation="vertical">
    <com.bjjy.buildtalk.weight.ClearEditText
        android:id="@+id/search_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_31"
        android:layout_centerVertical="true"
        android:hint="搜索名字"
        android:inputType="text"
        android:imeOptions="actionSearch"
        android:textColorHint="@color/text_light"
        android:textColor="@color/text_mid"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/sp_11"
        android:background="@drawable/shape_storke_search"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toLeftOf="@+id/cancle_tv"
        android:layout_marginRight="@dimen/dp_15"/>
    <TextView
        android:id="@+id/cancle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_15"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"/>
</RelativeLayout>