<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_face_iv"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:src="@drawable/test_course"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/text_drak"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_toRightOf="@+id/item_face_iv"/>
    <ImageView
        android:id="@+id/item_tag_iv"
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:src="@drawable/tag_icon"
        android:layout_toRightOf="@+id/item_name_tv"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_3"/>
    <TextView
        android:id="@+id/item_master_tv"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_12"
        android:text="圈主"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:includeFontPadding="false"
        android:background="@drawable/shape_orange_1radius"
        android:layout_toRightOf="@+id/item_tag_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_centerVertical="true"/>
    <ImageView
        android:layout_width="@dimen/dp_13"
        android:layout_height="@dimen/dp_13"
        android:src="@drawable/arrow_right_black"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border3"
        android:layout_below="@id/item_face_iv"/>
</RelativeLayout>