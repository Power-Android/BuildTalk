<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector">
    <TextView
        android:id="@+id/item_sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_20"
        android:background="@drawable/num1_member_icon"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15" />
    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/item_sort_tv"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_marginBottom="@dimen/dp_10">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_face_iv"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@drawable/moren_face" />
        <ImageView
            android:id="@+id/item_tag_iv"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_13"
            android:src="@drawable/tag_icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_3"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/sp_15"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_140"
        android:textColor="@color/text_drak"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/common_margin"
        android:layout_toRightOf="@+id/item_rl"/>
    <TextView
        android:id="@+id/item_master_tv"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_12"
        android:text="圈主"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_10"
        android:gravity="center"
        android:includeFontPadding="false"
        android:background="@drawable/shape_orange_1radius"
        android:layout_toRightOf="@+id/item_name_tv"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_marginTop="@dimen/dp_15"/>
    <TextView
        android:id="@+id/item_flag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活跃度"
        android:textColor="#999999"
        android:textSize="@dimen/sp_10"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_rl"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/common_margin"/>
    <TextView
        android:id="@+id/item_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="46"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_15"
        android:layout_toRightOf="@id/item_flag_tv"
        android:layout_below="@+id/item_name_tv"
        android:layout_marginLeft="@dimen/dp_5"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border3"
        android:layout_below="@id/item_rl"/>
</RelativeLayout>