<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selector"
    android:padding="@dimen/dp_12">
    <RelativeLayout
        android:layout_width="@dimen/dp_150"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/circle_iv"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:background="@drawable/shape_circle_top_5radius" />

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:src="@drawable/add_icon"
            android:layout_marginTop="@dimen/dp_55"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_72"
            android:layout_marginTop="@dimen/dp_m_1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/circle_iv"
            android:background="@drawable/shape_circle_5radius">

            <TextView
                android:id="@+id/circle_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:maxLength="11"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="创建圈子"
                android:textColor="@color/text_drak"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>