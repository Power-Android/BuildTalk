<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/jieshao_layout">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_15">

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="谭小建"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_drak"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/edu_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_tv"
            android:text="博士"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/text_mid"
            android:textSize="@dimen/sp_14"/>
        <TextView
            android:id="@+id/intro_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/edu_tv"
            android:layout_below="@+id/name_tv"
            android:layout_marginTop="@dimen/dp_15" />
        <TextView
            android:id="@+id/desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="悉尼大学工商管理硕士，美国南加州大学工商管理博士"
            android:layout_below="@+id/edu_tv"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_mid"/>
        <TextView
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="曾获得"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_drak"
            android:textStyle="bold"
            android:layout_below="@+id/desc_tv"
            android:layout_marginTop="@dimen/dp_20"/>
        <TextView
            android:id="@+id/received_tv"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2002-2003年度北京优秀企业家
2004年度北京用户满意杰出管理者
2005年度北京明星建筑装饰企业家，全部建筑装饰
行业优秀企业家等诸多荣誉"
            android:layout_below="@+id/view2"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_mid"
            android:textSize="@dimen/sp_14"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
