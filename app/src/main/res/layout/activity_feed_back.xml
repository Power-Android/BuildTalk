<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.bjjy.buildtalk.ui.mine.FeedBackActivity">
    <include layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20">
            <EditText
                android:id="@+id/content_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minLines="7"
                android:gravity="start"
                android:maxLength="2000"
                android:hint="请描述您的问题或建议（必填）"
                android:padding="@dimen/common_margin"
                android:textColor="@color/text_mid"
                android:textColorHint="@color/text_mid"
                android:textSize="@dimen/sp_12" />
            <TextView
                android:id="@+id/edit_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:layout_margin="10dp"
                android:text="0/2000个字"
                android:textColor="@color/text_light"
                android:textSize="12sp" />
        </FrameLayout>
        <TextView
            android:id="@+id/commit_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:background="@drawable/shape_blue_5button"
            android:layout_marginTop="@dimen/dp_20"/>
    </LinearLayout>

</LinearLayout>
