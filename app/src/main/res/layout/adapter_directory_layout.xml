<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    android:background="@color/white">
    <ImageView
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_21"
        android:src="@drawable/video_tag_icon"
        android:layout_margin="@dimen/dp_15"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01讲  ArchCAD简介"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/view1"
        android:textColor="@color/text_drak"
        android:textSize="@dimen/sp_14" />
    <ImageView
        android:id="@+id/item_sk_iv"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/shikan_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"/>
    <ImageView
        android:id="@+id/item_sd_iv"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:src="@drawable/lock_icon"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border2"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/view1"/>
</RelativeLayout>