<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_top_share_bg">
    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_33"
        android:layout_height="@dimen/dp_5"
        android:background="@drawable/shape_gray_2_5radius"
        android:layout_marginTop="@dimen/dp_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/text_color7"
        android:layout_marginTop="@dimen/common_margin"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/wechat_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="微信好友"
        android:gravity="center"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_color7"
        android:drawableTop="@drawable/wechat_icon"
        android:drawablePadding="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginStart="@dimen/common_margin"
        app:layout_constraintTop_toBottomOf="@+id/view2"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/wechat_circle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="朋友圈"
        android:gravity="center"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_color7"
        android:drawableTop="@drawable/wechat_circle_icon"
        android:drawablePadding="@dimen/dp_8"
        android:layout_marginStart="@dimen/common_margin"
        app:layout_constraintTop_toTopOf="@+id/wechat_tv"
        app:layout_constraintStart_toEndOf="@+id/wechat_tv" />
    <TextView
        android:id="@+id/discover_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公开至发现"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_color7"
        android:layout_marginStart="@dimen/common_margin"
        android:drawableTop="@drawable/share_discover_icon"
        android:drawablePadding="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="@+id/wechat_tv"
        app:layout_constraintStart_toEndOf="@+id/wechat_circle_tv" />
    <TextView
        android:id="@+id/circle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转发至圈子"
        android:visibility="gone"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/text_color7"
        android:layout_marginStart="@dimen/common_margin"
        android:drawableTop="@drawable/share_circle_icon"
        android:drawablePadding="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="@+id/wechat_tv"
        app:layout_constraintStart_toEndOf="@+id/wechat_circle_tv" />
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/border4"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintTop_toBottomOf="@+id/wechat_tv"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_7_5"
        android:layout_marginEnd="@dimen/dp_7_5"
        app:layout_constraintTop_toBottomOf="@+id/view3"/>
    <TextView
        android:id="@+id/cancle_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@drawable/shape_white_25radius"
        android:layout_marginStart="@dimen/common_margin"
        android:layout_marginEnd="@dimen/common_margin"
        android:layout_marginBottom="@dimen/common_margin"
        android:layout_marginTop="@dimen/dp_25"
        android:text="取消"
        android:textColor="@color/text_color7"
        android:textSize="@dimen/sp_15"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>