<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/background"/>
    <RelativeLayout
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="@dimen/dp_10">

        <View
            android:id="@+id/icon1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/common_margin"
            android:background="@drawable/hot_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_toRightOf="@+id/icon1"
            android:includeFontPadding="false"
            android:text="正在热聊~"
            android:textColor="@color/text_drak"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/toptic_change_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerVertical="true">
            <ImageView
                android:id="@+id/toptic_change_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/change_blue_icon"
                android:layout_toLeftOf="@+id/toptic_all_tv" />
            <TextView
                android:id="@+id/toptic_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_marginRight="@dimen/common_margin"
                android:includeFontPadding="false"
                android:text="换一换"
                android:textColor="@color/blue_mid"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/toptic_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_7_5"
        android:layout_marginRight="@dimen/dp_7_5"
        android:layout_marginTop="@dimen/dp_10"
        android:overScrollMode="never" />

</RelativeLayout>